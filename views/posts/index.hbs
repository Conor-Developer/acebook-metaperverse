
<HTML>
  <script type="text/javascript" src="./javascripts/likesView.js" defer></script>
  <script src='https://unpkg.com/axios/dist/axios.min.js'></script>
  <form action="/" method="GET">
    <input type="submit" value="Home" />
  </form>

  <h1>Timeline</h1>

  <ul class="posts">
    {{#each posts}}
      <li>{{this.message}}</li>
      <button id="like-button" class="{{this.id}}" type="submit" value="Like">Like</button>
      <span id="likes-count-{{this.id}}">{{this.likes}}</span>   

    {{#each post_comments}}
    <li><h4 class="card-title">{{this.comment}}</h4></li>
   {{/each}}
    {{this.comments}}
   
<form action= '/comments/{{post_id}}' method='POST'>
      <form id="new-comment-form" action="/posts" method="post"></form>  
         Comment:<input type="text" name="comment"> 
        <input type="submit" value="submit">
</form>

    {{/each}}
  </ul>

  <a class="new-post-link" href="/posts/new">New post</a>

   <form action="/sessions?_method=DELETE" method="POST">
      <input id="logout" value="Log Out" />
  </form>




