<html>
  <head>
    <title>{{title}}</title>
    <link rel="stylesheet" href="/stylesheets/login_style.css" />
  </head>    
  <body>
    <section>
      <div class="center">
        <h2>Log into Acebook</h2>
        <form id="new-session-form" action="/sessions" method="post">
          <input id="email" type="email" name="email" placeholder="Email" value="" />
          <input id="password" type="password" name="password" placeholder="Password" value="" />
          <input id="submit" type="submit" value="Submit" />
        </form>
        <p style="color:red">{{this.message}}</p>
        <p><input type="checkbox" class="checkbox-style" />Keep me Logged in</p>
        <p><a href="#">Forgot Password?</a>
      </div>
    </section>
  </body>
</html>